@model IEnumerable<Inventory.Entities.Entities.Unit>

<div class="row col-md-12">
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="unitDetailsIndexTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShortForm)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortForm)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UnitId" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.UnitId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

@section Scripts {

    <script>

        $(document).ready(function () {
            $("#unitDetailsIndexTable").DataTable();
        });


    </script>

 }
